# Hugging Face Configuration
# Get your API key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=hf_your_api_key_here

# Primary model for text generation and tag suggestions
# Recommended: microsoft/DialoGPT-medium, gpt2, distilgpt2
HUGGINGFACE_MODEL=microsoft/DialoGPT-medium

# Classification model for zero-shot classification
# Recommended: facebook/bart-large-mnli, microsoft/deberta-v3-base
HUGGINGFACE_CLASSIFICATION_MODEL=facebook/bart-large-mnli

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
# In production, set this to your frontend domain
CORS_ORIGIN=http://localhost:3000

# Rate Limiting Configuration
# Time window in milliseconds (15 minutes = 900000ms)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# API Configuration
# Maximum tokens for AI responses
MAX_TOKENS=50
# Temperature for AI creativity (0.0 = deterministic, 1.0 = very creative)
TEMPERATURE=0.7

# Caching Configuration (optional)
# Enable response caching to reduce API calls
ENABLE_CACHE=true
# Cache TTL in seconds (1 hour = 3600)
CACHE_TTL=3600

# Logging Configuration
# Set to 'debug' for detailed logs, 'info' for normal operation
LOG_LEVEL=info

# Security Configuration
# Enable request logging (disable in production for privacy)
ENABLE_REQUEST_LOGGING=true
# Enable API key validation
ENABLE_API_KEY_VALIDATION=true