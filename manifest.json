{
  "manifest_version": 3,
  "name": "ChronoMark - Tag & Sync Bookmarks",
  "version": "1.0",
  "description": "Save, tag, and sync bookmarks with Google Drive.",
  "permissions": [
    "tabs",
    "identity",
    "storage",
    "alarms",
    "bookmarks"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.svg",
      "48": "icon48.svg",
      "128": "icon128.svg"
    }
  },
  "icons": {
    "16": "icon16.svg",
    "48": "icon48.svg",
    "128": "icon128.svg"
  },
  "oauth2": {
    "client_id": "214396245139-vpq9cr8hqh4tivh03nfos6lmeosrnsdn.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.file",
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "key": "MIIBIjANBgkqhkiG9w0BAQEFAAOCAQ8AMIIBCgKCAQEAca8c6fe7014c52be1e51d8525f11ffa3"
}