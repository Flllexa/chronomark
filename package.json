{
  "name": "chronomark-extension",
  "version": "1.0.0",
  "description": "A Chrome extension to save, tag, and search your favorite websites.",
  "private": true,
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "scripts": {
    "build": "./node_modules/esbuild/bin/esbuild index.tsx --bundle --outfile=dist/index.js --loader:.tsx=tsx --jsx=automatic && ./node_modules/esbuild/bin/esbuild background.ts --bundle --outfile=dist/background.js --platform=browser --target=es2020",
    "build:dev": "./node_modules/esbuild/bin/esbuild index.tsx --bundle --outfile=index.js --loader:.tsx=tsx --jsx=automatic && ./node_modules/esbuild/bin/esbuild background.ts --bundle --outfile=background.js --platform=browser --target=es2020",
    "clean": "rm -rf dist/",
    "dist": "mkdir -p dist && cp manifest.json index.html icon*.png dist/",
    "package": "cd dist && zip -r ../chronomark-extension.zip ."
  },
  "keywords": [
    "chrome-extension",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "esbuild": "^0.25.9"
  }
}
